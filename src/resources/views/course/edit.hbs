<div class='container'>
    <h3>sửa khoá học</h3>
    <div class='p-3'>
        <form method='POST' action='/courses/{{courses._id}}?_method=PUT'>
            <div class='mb-3'>
                <label for='exampleInputEmail1' class='form-label'>name</label>
                <input type='text' class='form-control' id='exampleInputEmail1' name='name' value='{{courses.name}}' />
            </div>
            <div class='mb-3'>
                <label for='exampleInputEmail1' class='form-label'>mô tả</label>
                <input
                    type='text'
                    class='form-control'
                    id='exampleInputEmail1'
                    aria-describedby='emailHelp'
                    name='describe'
                    value='{{courses.describe}}'
                />
            </div>
            <div class='mb-3'>
                <label for='exampleInputEmail1' class='form-label'>hình ảnh</label>
                <input
                    type='text'
                    class='form-control'
                    id='exampleInputEmail1'
                    aria-describedby='emailHelp'
                    name='image'
                    value='{{courses.image}}'
                />
            </div>
            <div class='mb-3'>
                <label for='exampleInputEmail1' class='form-label'>video</label>
                <input
                    type='text'
                    class='form-control'
                    id='exampleInputEmail1'
                    aria-describedby='emailHelp'
                    name='video'
                    value='{{courses.video}}'
                />
            </div>

            <button type='submit' class='btn btn-primary'>lưu lại</button>
        </form>
    </div>
</div>